{
    "name": "playground",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "prettier": {
        "tabWidth": 4
    },
    "devDependencies": {
        "eslint-config-custom": "workspace:*",
        "prettier": "^2.8.3",
        "turbo": "^1.7.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "dotenv-cli": "^7.0.0"
    },
    "packageManager": "pnpm@7.26.3"
}
